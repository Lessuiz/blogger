<h3>Poste um comentário</h3>
<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Seu nome" %><br>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Seu comentário" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "enviar" %>
  </p>
<% end %>
